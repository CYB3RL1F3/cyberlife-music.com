{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm build:css && pnpm build:worker && pnpm build:remix",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/styles.css",
    "build:remix": "pnpm remix build",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "clean:types": "npx ts-node ./scripts/fix-type-files.ts",
    "codegen": "pnpm download:schema && apollo codegen:generate --outputFlat ./app/types/gql --localSchemaFile=./graphql-schema.json --target=typescript --tagName=gql",
    "dev": "npm-run-all -p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/styles.css",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch",
    "download:schema": "apollo service:download --endpoint=http://localhost:3000/graphql ./graphql-schema.json",
    "generate:component": "npx ts-node ./scripts/create-component.ts",
    "generate:graphql": "pnpm codegen && pnpm clean:types",
    "start": "pnpm build && cross-env NODE_ENV=production pnpm remix-serve build"
  },
  "dependencies": {
    "@apollo/client": "^3.7.2",
    "@esbuild/darwin-x64": "^0.16.1",
    "@hookform/resolvers": "^2.9.10",
    "@remix-run/node": "^1.8.1",
    "@remix-run/react": "^1.8.1",
    "@remix-run/serve": "^1.8.1",
    "@remix-run/server-runtime": "^1.8.0",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/dompurify": "^2.4.0",
    "@types/node": "^18.11.11",
    "apollo": "^2.34.0",
    "autoprefixer": "^10.4.13",
    "clsx": "^1.2.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "dompurify": "^2.4.1",
    "dotenv": "^16.0.3",
    "esbuild": "^0.16.1",
    "framer-motion": "^7.6.19",
    "html-react-parser": "^3.0.4",
    "isbot": "^3.6.5",
    "isomorphic-dompurify": "^0.24.0",
    "mapbox-gl": "^2.11.1",
    "node-fetch": "^3.3.0",
    "node-persist": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "react": "^18.2.0",
    "react-audio-player": "^0.17.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.40.0",
    "react-hooks-form": "^2.0.1",
    "react-icons": "^4.7.1",
    "react-map-gl": "^7.0.20",
    "remix": "^1.8.1",
    "remix-auth": "^3.4.0",
    "source-map-support": "^0.5.21",
    "superstruct": "^1.0.3",
    "tailwind-scrollbar": "^2.0.1",
    "tailwindcss": "^3.2.4",
    "tailwindcss-animation-delay": "^1.0.7",
    "tailwindcss-owl": "^2.0.0",
    "typescript": "^4.9.3",
    "web-push": "^3.5.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.8.1",
    "@remix-run/eslint-config": "^1.8.1",
    "@types/node-persist": "^3.1.3",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "eslint": "^8.29.0"
  },
  "engines": {
    "node": "16.13.0"
  }
}
