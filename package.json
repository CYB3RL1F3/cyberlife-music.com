{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/styles.css",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/styles.css",
    "start": "remix-serve build",
    "clean:types": "npx ts-node ./scripts/fix-type-files.ts",
    "download:schema": "apollo service:download --endpoint=http://localhost:3000/graphql ./graphql-schema.json",
    "codegen": "pnpm download:schema && apollo codegen:generate --outputFlat ./app/types/gql --localSchemaFile=./graphql-schema.json --target=typescript --tagName=gql",
    "generate:component": "npx ts-node ./scripts/create-component.ts",
    "generate:graphql": "pnpm codegen && pnpm clean:types"
  },
  "dependencies": {
    "@apollo/client": "^3.7.1",
    "@remix-run/node": "^1.7.5",
    "@remix-run/react": "^1.7.5",
    "@remix-run/serve": "^1.7.5",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/node": "^18.11.9",
    "apollo": "^2.34.0",
    "autoprefixer": "^10.4.13",
    "clsx": "^1.2.1",
    "concurrently": "^7.5.0",
    "dotenv": "^16.0.3",
    "framer-motion": "^7.6.4",
    "graphql": "^16.6.0",
    "html-react-parser": "^3.0.4",
    "isbot": "^3.6.3",
    "node-fetch": "^3.2.10",
    "postcss": "^8.4.18",
    "react": "^18.2.0",
    "react-audio-player": "^0.17.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "tailwind-scrollbar": "^2.0.1",
    "tailwindcss": "^3.2.2",
    "tailwindcss-animation-delay": "^1.0.7",
    "tailwindcss-owl": "^2.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.5",
    "@remix-run/eslint-config": "^1.7.5",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
